{
  "$schema": "http://www.krakend.io/schema/v3.json",
  "version": 3,
  "extra_config": {
        "telemetry/logging": {
          "level": "DEBUG",
          "prefix": "[KRAKEND]",
          "syslog": false,
          "stdout": true
        }
    },
  "output_encoding": "json",
  "name": "InventoryOrderAggregate",
  "port": 8081,
  "endpoints": [
    {
      "endpoint": "/ordersinventories/{producttype}/{id}",
      "method": "GET",
      "output_encoding": "json",
	  "input_headers": [
        "Authorization"
        ],
      "extra_config": {
        "auth/validator": {
          "alg": "RS256",
          "jwk_url": "http://keycloak:8080/realms/ada2024/protocol/openid-connect/certs",
          "disable_jwk_security": true
        } 
      },
      "backend": [
        {
          "url_pattern": "/orders/{id}",
          "encoding": "json",
          "method": "GET",
          "host": [
            "http://order_record_service_ct:5000/"
          ],
          "disable_host_sanitize": false
        },
        {
          "url_pattern": "/products/{producttype}",
          "encoding": "json",
          "method": "GET",
          "host": [
            "http://inventory_service_ct:5000/"
          ],
          "disable_host_sanitize": false
        }
      ]
    },
    {
      "endpoint": "/orders/{id}",
      "method": "GET",
	  "input_headers": [
        "Authorization"
      ],
      "extra_config": {
        "proxy": {
          "sequential": true
        },
        "auth/validator": {
          "alg": "RS256",
          "jwk_url": "http://keycloak:8080/realms/ada2024/protocol/openid-connect/certs",
          "disable_jwk_security": true
        }
      },
      "output_encoding": "json",
      "backend": [
        {
          "url_pattern": "/orders/{id}",
          "encoding": "json",
          "method": "GET",
          "host": [
            "http://order_record_service_ct:5000/"
          ],
          "disable_host_sanitize": false,
          "mapping": {
            "product_type": "type"
          }
        },
        {
          "url_pattern": "/products/{resp0_type}",
          "encoding": "json",
          "method": "GET",
          "host": [
            "http://inventory_service_ct:5000/"
          ],
          "disable_host_sanitize": false
        }
      ]
    }
  ]
}